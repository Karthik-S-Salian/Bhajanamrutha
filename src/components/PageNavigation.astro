---
export interface Props {
    prevsUrl?: string;
    nextUrl?: string;
}

const { prevsUrl, nextUrl } = Astro.props;
---

<nav class="flex flex-wrap justify-center items-center gap-8">
    {prevsUrl && <a href={`${prevsUrl}#bhajans`}>Previous</a>}

    {nextUrl && <a href={`${nextUrl}#bhajans`}>Next</a>}
</nav>

<style>
    {/*noto-kannada applies ~6px padding in bottom by default */}
    nav > a {
        @apply pt-2 pb-[2px] px-4 rounded-md bg-black text-white text-sm text-center w-24;
    }
</style>
